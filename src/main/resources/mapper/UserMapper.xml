<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rental.auto_rental.mapper.UserMapper">

    <select id="selectRoleNameByUserId" resultType="java.lang.String" parameterType="int">
        select r.role_name
        from sys_role r,
             sys_user_role ur
        where ur.user_id = #{id}
          and ur.role_id = r.id
    </select>
</mapper>
